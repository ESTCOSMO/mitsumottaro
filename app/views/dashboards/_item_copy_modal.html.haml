#item-copy-modal.modal.hide
  .url_template_for_copy_category.hidden= copy_project_category_path("___PID___", "___LID___")
  .url_template_for_copy_sub_category.hidden= copy_project_category_sub_category_path("___PID___", "___LID___", "___MID___")
  .url_template_for_copy_story.hidden= copy_project_category_sub_category_story_path("___PID___", "___LID___", "___MID___", "___SID___")
  .category_options.hidden= options_for_select(cat1: 1, cat2: 2) #Project.find("___PID___").categories.map{ |c| [c.name, c.id] }
  .sub_category_options.hidden= {}#Category.find("___LID___").sub_categories.map{ |s| [s.name, s.id] }
  .url_for_save.hidden
  .method_for_save.hidden
  .modal-header
    %button.close{"type" => "button", "data-dissmiss" => "modal", "aria-hidden" => true}
      &times;
    %h3 項目コピー
  .modal-body
    = form_tag "#", remote: true, html: { class: 'form-horizontal', id: 'item_copy_modal_form' } do
      = hidden_field_tag "_method", "POST"
      .alert.alert-error.hidden
      %p
        %strong{id: 'item_name'}
      .control-group
        = label_tag :category_id, "大項目", class: 'control-label'
        .controls
          = select_tag :category_id, nil, include_blank: true
      .control-group
        = label_tag :sub_category_id, "中項目", class: 'control-label'
        .controls
          = select_tag :sub_category_id, nil, include_blank: true
      .form-actions
        = submit_tag "保存", class: "btn btn-primary btn-save"
        %button.btn.close_btn{type: "button"}
          閉じる
