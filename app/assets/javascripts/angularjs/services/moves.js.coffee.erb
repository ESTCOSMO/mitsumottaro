<%
   url = ::Mitsumoritaro::Application.routes.url_helpers
   move_higher_category_path = url.move_higher_api_project_category_path('___PID___', '___CID___').gsub(/___PID___/, ':project_id').gsub(/___CID___/, ':id')
   move_lower_category_path = url.move_lower_api_project_category_path('___PID___', '___CID___').gsub(/___PID___/, ':project_id').gsub(/___CID___/, ':id')
   move_higher_sub_category_path = url.move_higher_api_project_category_sub_category_path('___PID___', '___CID___', '___SUB_CID___').gsub(/___PID___/, ':project_id').gsub(/___CID___/, ':category_id').gsub(/___SUB_CID___/, ':id')
   move_lower_sub_category_path = url.move_lower_api_project_category_sub_category_path('___PID___', '___CID___', '___SUB_CID___').gsub(/___PID___/, ':project_id').gsub(/___CID___/, ':category_id').gsub(/___SUB_CID___/, ':id')
   move_higher_story_path = url.move_higher_api_project_category_sub_category_story_path('___PID___', '___CID___', '___SUB_CID___', '___SID___').gsub(/___PID___/, ':project_id').gsub(/___CID___/, ':category_id').gsub(/___SUB_CID___/, ':sub_category_id').gsub(/___SID___/, ':id')
   move_lower_story_path = url.move_lower_api_project_category_sub_category_story_path('___PID___', '___CID___', '___SUB_CID___', '___SID___').gsub(/___PID___/, ':project_id').gsub(/___CID___/, ':category_id').gsub(/___SUB_CID___/, ':sub_category_id').gsub(/___SID___/, ':id')
%>
angular.module('mitsumottaroApp').factory 'MoveHigherCategory', ['$resource', ($resource) ->
  $resource('<%= move_higher_category_path %>', { id: '@id', project_id: '@project_id' },{'update': {method: 'PATCH'}})
]

