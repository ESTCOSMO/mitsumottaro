<%
   url = ::Mitsumoritaro::Application.routes.url_helpers
   point_path = url.api_project_category_sub_category_story_task_point_path('___PID___', '___CID___', '___SUB_CID___', '___SID___', '___TPID___').gsub(/___PID___/, ':project_id').gsub(/___CID___/, ':category_id').gsub(/___SUB_CID___/, ':sub_category_id').gsub(/___SID___/, ':story_id').gsub(/___TPID___/, ':id')
%>
angular.module('mitsumottaroApp').factory 'TaskPoint', ['$resource', ($resource) ->
  $resource('<%= point_path %>', { id: '@id', project_id: '@project_id', category_id: '@category_id', sub_category_id: '@sub_category_id', story_id: '@story_id'},{'update': {method: 'PATCH'}})
]
