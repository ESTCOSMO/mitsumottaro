<% url = ::Mitsumoritaro::Application.routes.url_helpers %>
angular.module("mitsumottaroApp").config ["$routeProvider", ($routeProvider) ->
 $routeProvider
   .when '/projects/:id/dashboard', {
     controller: 'EditableDashboardController'
     templateUrl: '<%= asset_path('angularjs/templates/dashboard.html') %>'
   }
   .when '/projects/:id/dashboard/archived', {
     controller: 'ArchivedDashboardController'
     templateUrl: '<%= asset_path('angularjs/templates/dashboard.html') %>'
   }
]
